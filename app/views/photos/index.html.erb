<h1>All photos</h1>

	<table>
		<th>
		 
			<td>Image</td>
			<td>Caption</td>	
		</th colspan= "3">
		<% @photos.each do |photo| %>
		<tr>
			<% if photo.image.present? %>
			<td> <%=  link_to (image_tag photo.image, height: "150em", width: "auto"), photo_path(photo) %>  </td>
			<% else %>
				<td>no image</td>
			<% end %>
			<td><%= photo.ph_name %></td>

			<td> <%= link_to 'Show', photo_path(photo) %> </td>
			<td> <%= link_to 'Edit', edit_photo_path(photo) %> </td>
			<td> <%= link_to 'Delete', photo_path(photo),
					method: :delete, data:{confirm: 'Are you sure ?'}
				 %> </td>
		</tr>
		<% end %>
	</table>

<%= link_to 'Add photo', new_photo_path %> <br>
