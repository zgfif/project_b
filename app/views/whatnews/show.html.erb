<% content_for :page_title do
  @whatnew.caption
end %>

<div class="container">
			<h2><%= @whatnew.caption %></h2>
			<p class="text-muted"> <%=  @whatnew.created_at.strftime("%m.%d.%Y"+" в "+"%H:%M") %></p>
		<div class="whatnew_image_show">
			<%= image_tag(@whatnew.imagenews_url, width: '300') if @whatnew.imagenews? %>   
		</div>		
		<div>
				<p>
			<%= @whatnew.text %>
		</p>

		<p>

		  <b>Tag:</b>
		 <span class="badge badge-primary">
		 	<%= @whatnew.tag%>	
		 </span> 
		  
		</p>	
		</div>    
		
		<% if user_signed_in?&&current_user.admin? %>
			<%=  link_to 'Редактировать', edit_admin_whatnews_path(@whatnew), class: 'btn btn-outline-secondary' %>
			<%= link_to 'Удалить', admin_whatnews_path(@whatnew), 
										method: :delete,
										data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-secondary' 	%>
		<% end %>
</div>
