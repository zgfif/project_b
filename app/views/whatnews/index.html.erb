
<div class="container">
	<h1>Все новости</h1>
<%= link_to 'Добавить', new_admin_whatnews_path, class: 'btn btn-primary' %>
<table>
	<tr>
		<th>id</th>
		<th>Caption</th>
		<th>Text</th>
		<th>Tag</th>
		<th colspan="4"></th>
	</tr>

	<% @whatnews.each do |whatnew| %>
		<tr>
			<td> <%= whatnew.id %>	</td>	
			<td> <%= whatnew.caption %>	</td>
			<td> <%= truncate(whatnew.text, length: 17) %>	</td>
			<td> <%=  whatnew.tag %> 	</td>
			<td> <%= link_to 'show', whatnews_path(whatnew) %> </td>
			<td> <%= link_to 'edit', edit_admin_whatnews_path(whatnew) %> </td>
			<td> <%= link_to 'destroy', admin_whatnews_path(whatnew),
										method: :delete,
										data: { confirm: 'Are you sure?' }	%>
			</td>
		</tr>		
	<% end %>
</table>
</div>
