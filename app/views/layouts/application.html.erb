<!DOCTYPE html>
<html>
  <head>

    <title>Project</title>
    <%= favicon_link_tag 'favicon_proj_b.ico' %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
   <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCAVW5Dt4SR_7vMGpR-lN_XXX-KLYoJwAQ&callback=initMap"
    async defer></script>
  </head>

<body class="site">
    <main class="site-content">
        
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%= link_to image_tag("favicon_proj_b.ico"), root_path, class: 'navbar-brand' %>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to 'Кружок компьютерных наук' ,root_path, class: 'nav-link' %>
            </li>
          </ul>
          <ul class="navbar-nav mr-right">



             <% if user_signed_in? %>
                  <li class="nav-item active">
                      <%= link_to 'Профиль' ,user_path(current_user), class: 'nav-link' %>
                  </li>
                  <li class="nav-item">
                    <div class="nav-link active">
                        <%= current_user.email %>
                    </div>

                  </li>
                  <li class="nav-item disabled" >
                      <%= link_to 'Выйти',  destroy_user_session_path, method: :delete, data: {:confirm => 'Вы уверены?'}, class: 'nav-link' %>
                  </li>

                  <% else %>
                  <li class="nav-item active">
                      <%= link_to 'Регистрация', new_user_registration_path, class: 'nav-link' %>
                  </li>
                  <li class="nav-item active">
                      <%= link_to 'Войти', new_user_session_path, class: 'nav-link' %>
                  </li>

                  <% end %>
          </ul>
         </div>
      </nav>
       
            <p class="notice"><%= notice %></p>
            <p class="alert"><%= alert %></p>
        
            <%= yield %>        
    </main>




          
    
          
            <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>

          <footer>
            <div class="container">
                <div class="row align-items-center footer_block">
                    <div class="col copy_right">
                      <p>  <%= link_to image_tag("favicon_proj_b.ico"), root_path, class: 'navbar-brand' %>PCbrains</p>
                      <p>&copy; 2017-2018, Bratanov</p>
                    </div>
                    <div class="col contacts">
                        <%= link_to 'Контакты', '/pages/contacts' %>
                    </div>
                        
                    <div class="col aboutus">
                        <%= link_to 'О нас', '/pages/about' %>
                    </div>
                    <div class="col github">
                        <%= link_to 'Github', 'https://github.com/zgfif/project_b', target: '_blank'  %>
                    </div>
              </div>  
            </div>
            
  <!--              , ||<%= link_to 'Feature1', '/pages/features/one' %>|<%= link_to 'Feature2', '/pages/features/two' %>
 -->          
          </footer>
          

  
  

</body>
</html>
