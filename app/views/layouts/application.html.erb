<!DOCTYPE html>
<html>
  <head>

    <title>ProjectB</title>
    <%= favicon_link_tag 'favicon_proj_b.ico' %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
   <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCAVW5Dt4SR_7vMGpR-lN_XXX-KLYoJwAQ&callback=initMap"
    async defer></script>
  </head>

  <body>


      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%= link_to image_tag("favicon_proj_b.ico"), root_path, class: 'navbar-brand' %>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to 'Кружок компьютерных наук' ,root_path, class: 'nav-link' %>
            </li>
          </ul>
          <ul class="navbar-nav mr-right">
              
          
 
             <% if user_signed_in? %>
                  <li class="nav-item active">
                      <%= link_to 'Профиль' ,user_path(current_user), class: 'nav-link' %> 
                  </li>  
                  <li class="nav-item">
                    <div class="nav-link active">
                        <%= current_user.email %>
                    </div>
                        
                  </li>    
                  <li class="nav-item disabled" >
                      <%= link_to 'Выйти',  destroy_user_session_path, method: :delete, data: {:confirm => 'Вы уверены?'}, class: 'nav-link' %>
                  </li>  
                      
                  <% else %>
                  <li class="nav-item active">
                      <%= link_to 'Регистрация', new_user_registration_path, class: 'nav-link' %>
                  </li>
                  <li class="nav-item active">
                      <%= link_to 'Войти', new_user_session_path, class: 'nav-link' %> 
                  </li>    
                      
                  <% end %>
          </ul>        
         </div>
      </nav>
             <p class="notice">
                    <%= notice %>    
              </p>

              <p class="alert">
                    <%= alert %>
              </p>


          <%= yield %>            

          <button onclick="topFunction()" id="myBtn" title="Go to top">Top</button>

          <div class="footer base_block">
            &copy; 2017-2018, Bratanov, <%= link_to 'О нас', '/pages/about' %><%= link_to 'Контакты', '/pages/contacts' %>
          </div>          


          
  </body>
</html>
