<div class="container">           
              <div class="base_block">
                  <!-- <center> -->
                    <h1>Последние новости</h1>
                      
                        <p>
                          
                        </p>
                      
                      <div class="row">
                          <% @whatnews.each do |whatnew| %>    
                            
                              <div class="col-sm-3">
                                <div class="card">

                                    <% if whatnew.imagenews? %>
                                          <%= image_tag(whatnew.imagenews_url,  class: 'card-img-top image_in_card')  %>
                                     <% else %> 
                                          <%= image_tag('no_image.png',  class: 'card-img-top image_in_card') %>         
                                     <% end %>
                                     <!-- <img class="card-img-top" src="..." alt="Card image cap"> -->
                                    <div class="card-body">

                                      <h5 class="card-title"><%= link_to whatnew.caption, whatnews_path(whatnew) %></h5>            
                                      <p class="text-muted"> <%=  whatnew.created_at.strftime("%m.%d.%Y"+" в "+"%H:%M") %> </p>
                                      <p class="card-text"><%= truncate(whatnew.text, length: 67)  %></p>
                                      <!-- <h5 class="card-title"><%= link_to 'Подробнее', whatnews_path(whatnew), class: 'btn btn-primary' %></h5> -->  
                                    </div>
                                </div>
                              </div>
                          <% end %>
                      </div>
                      <div class="row row_link justify-content-end">
                        <div class="col-sm-3 link_welcome align-self-end">
                            <div class="to_right">
                                <h5><%= link_to 'Ещё', whatnews_index_path, class: 'btn btn-primary' %></h5>   
                            </div>
                            
                        </div>
                      </div>
                  <hr>
              </div>

              <div class="base_block">
                  <!-- <center> -->
                    <h1>Программа</h1>
                    <% @subjects.each do |subject| %>
                        <p>
                          <%= link_to subject.title, subject_path(subject) %>
                        </p>
                      <% end %>
                  <!-- </center> -->
                    <div class="row row_link justify-content-end">
                      <div class="col-sm-3 link_welcome align-self-end">
                          <div class=" to_right">
                              <%= link_to 'Ещё', subjects_path, class: 'btn btn-primary' %>
                            </div>
                      </div>  
                    </div>
                    
                  <hr>
              </div>

              <div class="base_block">
                  <!-- <center> -->
                    <h1>Фотогалерея</h1>
                  <!-- </center> -->
                  <hr>
              </div>
</div>

    <div id="map">
    </div>
          

