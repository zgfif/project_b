
<h1>Все темы</h1>
<%= link_to 'Новый предмет', new_subject_path %><br> 
<table>
  <tr>
    <th>Тема</th>
    <th>Описание</th>
    <th></th>
  </tr>
 
  <% @subjects.each do |subject| %>
    <tr>
      <td><%= subject.title %></td>
      <td><%= subject.description %></td>
      <td><%= link_to 'Показать', subject_path(subject) %></td>
      <td><%= link_to 'Редактировать', edit_subject_path(subject) %></td>
      <td><%= link_to 'Удалить', subject_path(subject), method: :delete,data: {confirm: 'Вы уверены?'} %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Домой', root_path %>
