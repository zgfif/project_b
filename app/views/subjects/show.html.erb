<% content_for :page_title do
  @subject.title
end %>

<div class="container">

	<h1>	<%= @subject.title %></h1>
		 
		<p>
			<%= @subject.description %>
		</p>
		<% if user_signed_in?&&current_user.admin? %>	
			<%= link_to 'Редактрировать', edit_admin_subject_path(@subject), class: 'btn btn-outline-secondary' %>
			<%= link_to 'Удалить', admin_subject_path(@subject),
									method: :delete,
									data: {confirm:'Вы действительно хотите удалить курс ' +  @subject.title + '?'},			
				 class: 'btn btn-outline-secondary' %>
		<% end %>
</div>




