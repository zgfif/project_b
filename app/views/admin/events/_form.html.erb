<%= form_with model: [:admin, @event], local: true do |form| %>
	<div class="form-group">
	
	
		<%= form.label :ev_title, 'Заголовок' %>
		<%= form.text_field :ev_title, placeholder: 'Название события', class: 'form-control' %>
	
	</div>
	<div class="form-group">
	
		<%= form.label :ev_description, 'Описание' %>
		<%= form.text_area :ev_description, placeholder: 'Опишите предстоящее или прошедшее событие', class: 'form-control' %>
	
	</div>
	<div class="form-action">
	
			<%= form.submit 'Сохранить', class: 'btn btn-primary' %>
	
	</div>
	
<% end %>
