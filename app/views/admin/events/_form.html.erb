<%= form_with model: [:admin, @event], local: true do |form| %>
	<div class="form-group">
	
	
		<%= form.label :ev_title %>
		<%= form.text_field :ev_title, class: 'form-control' %>
	
	</div>
	<div class="form-group">
	
		<%= form.label :ev_description %>
		<%= form.text_area :ev_description, class: 'form-control' %>
	
	</div>
	<div class="form-action">
	
			<%= form.submit 'Сохранить', class: 'btn btn-primary' %>
	
	</div>
	
<% end %>
