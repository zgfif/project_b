<%= form_with model: [:admin, @whatnew], local: true  do |form| %>

  <% if @whatnew.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@whatnew.errors.count, "error") %> prohibited
        this news from being saved:
      </h2>
      <ul>
        <% @whatnew.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">

    <%= form.file_field :imagenews %>
  </div>
  <% unless @whatnew.imagenews.blank? %>
      <div class="form-group">
        <label>
          <%= form.check_box :remove_imagenews %>
          Удалить изображение
        </label>
      </div>
  <% end %>

  <div class="form-group">
  
    <%= form.label :caption %>
    <%= form.text_field :caption, class: 'form-control' %>
  
  </div>
  <div class="form-group">
  
    <%= form.label :text %>
    <%= form.text_area :text, class: 'form-control', rows: '10' %>
  
  </div>
  
  <div class="form-group">
  
    <%= form.label :tag %>
    <%= form.text_field :tag, class: 'form-control' %>
  
  </div>
  <div class="actions">
    <%= form.submit 'Сохранить', class: 'btn btn-primary' %>
  </div>
  
<% end %>
