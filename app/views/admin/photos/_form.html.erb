
<%= form_with model: [:admin, @photo], html: { multipart: true }, local: true  do |form| %>
	<p>
		<%= form.label 'Пожалуйста, выбирите событие' %>
		<%= collection_select(:photo, :event_id, Event.all, :id, :ev_title) %>
		
	</p>
	<p>
		<%= form.label :ph_name %>
		<%= form.text_field :ph_name %>
	</p>
	<p>
		<%= form.label :image %>
		<%= form.file_field :image %>
	</p>
	<% unless  @photo.image.blank? %>
			<p>
		    <label>
		      <%= form.check_box :remove_image %>
		      Remove image
		    </label>
		  </p>
  	<% end %>

	<%= form.submit 'Сохранить' %>
<% end %>
