<h1>All users</h1>
<table>
	<tr>
		
			<th>First name</th>
			<th>Last name</th>
			<th> e-mail </th>
			<th>phone</th>
			<th>admin</th>
			
	</tr>
	
	<% @users.each do |user| %>
		<tr>
			<td><%= user.firstname %></td>	
			<td><%= user.lastname %></td>	
			<td><%= user.email %> </td>
			<td><%= user.admin %> </td>
			<td><%= link_to 'Show', user_path(user) %></td>
			<td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data:{confirm: 'Are you sure'} %></td> 
		</tr>
	<% end %>
</table>
<p>
	<%= link_to 'Home', root_path %>
</p>