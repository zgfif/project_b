<h1>Editing user's profile</h1>

<%= form_with model: @user, local: true do |form| %>
	<p>
		<%= form.label :firstname %>
		<%= form.text_field :firstname %>
	</p>
	<p>
		<%= form.label :lastname %>
		<%= form.text_field :lastname %>
	</p>
	<p>
		<%= form.label :phone %>
		<%= form.text_field :phone %>
	</p>
	<p>
		<%= form.submit %>
	</p>
<% end %>


<p>
	<%= link_to 'Home', root_path %>
</p>